@page
@model Watermark.Pages.Admin.Catalog.Products.NewModel
@{
    ViewData["Title"] = "Add Product";
}

@section Styles
{
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Add A New Product</strong>
            </div>
            <div class="card-body">
                <form asp-controller="Products" asp-action="AddProductAsync"
                      data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                      data-ajax-failure="onFailed" data-ajax-success="onSuccess"
                      data-ajax="true" data-ajax-method="POST">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Product Name</span>
                            @Html.TextBoxFor(m => m.Product.ProductName.DisplayName, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>

                    <p id="results"></p>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/pages/products_new.js")"></script>
}